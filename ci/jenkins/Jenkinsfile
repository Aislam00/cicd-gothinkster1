pipeline {
    agent any
    
    environment {
        AWS_REGION = 'eu-west-2'
        ECR_REGISTRY = '475641479654.dkr.ecr.eu-west-2.amazonaws.com'
        IMAGE_NAME = 'realworld-api'
        ASG_NAME = 'realworld-dev-app-asg'
        NODE_ENV = 'test'
        PATH = "/var/lib/jenkins/.local/bin:/var/lib/jenkins/bin:$PATH"
    }
    
    stages {
        stage('Code Checkout') {
            steps {
                checkout scm
                sh 'find . -name "package.json" -type f | head -5'
                sh 'find . -name "*.tf" -type f | head -5'
            }
        }
        
        stage('Build & Install Dependencies') {
            steps {
                script {
                    if (fileExists('app/package.json')) {
                        dir('app') {
                            sh 'npm install --production=false'
                            sh 'npm run build || npx nx build --prod || true'
                        }
                    }
                }
            }
        }
        
        stage('Security Scanning - Dependencies') {
            steps {
                script {
                    if (fileExists('app/package.json')) {
                        dir('app') {
                            sh 'npm audit --audit-level high --json > npm-audit.json || true'
                            sh 'npm audit --audit-level high || true'
                        }
                    }
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: '**/npm-audit.json', allowEmptyArchive: true
                }
            }
        }
        
        stage('Security Scanning - Infrastructure') {
            parallel {
                stage('Terraform Security - tfsec') {
                    steps {
                        script {
                            if (fileExists('terraform')) {
                                sh '''
                                    mkdir -p $HOME/bin
                                    curl -s https://raw.githubusercontent.com/aquasecurity/tfsec/master/scripts/install_linux.sh | bash -s -- -b $HOME/bin
                                    $HOME/bin/tfsec terraform/ --format json --out tfsec-results.json || true
                                    $HOME/bin/tfsec terraform/ || true
                                '''
                            } else {
                                echo 'No Terraform files found'
                            }
                        }
                    }
                }
                stage('Infrastructure Security - Checkov') {
                    steps {
                        script {
                            if (fileExists('terraform')) {
                                sh '''
                                    pip3 install checkov --user
                                    export PATH="/var/lib/jenkins/.local/bin:$PATH"
                                    checkov -d terraform/ --framework terraform --output json --output-file checkov-results.json || true
                                    checkov -d terraform/ --framework terraform --compact || true
                                '''
                            } else {
                                echo 'No Terraform files found'
                            }
                        }
                    }
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: '*-results.json', allowEmptyArchive: true
                }
            }
        }
        
        stage('Test Suite') {
            steps {
                script {
                    if (fileExists('app/package.json')) {
                        dir('app') {
                            sh '''
                                export DATABASE_URL="file:./test.db"
                                npx prisma generate || true
                                npx prisma db push --force-reset || true
                                npm test -- --watch=false --runInBand --forceExit || true
                            '''
                        }
                    }
                }
            }
        }
        
        stage('Docker Image Build') {
            steps {
                script {
                    def imageTag = "${BUILD_NUMBER}"
                    if (fileExists('app/Dockerfile')) {
                        dir('app') {
                            sh """
                                docker build --platform linux/amd64 -t ${ECR_REGISTRY}/${IMAGE_NAME}:${imageTag} .
                                docker tag ${ECR_REGISTRY}/${IMAGE_NAME}:${imageTag} ${ECR_REGISTRY}/${IMAGE_NAME}:latest
                            """
                        }
                    }
                    env.IMAGE_TAG = imageTag
                }
            }
        }
        
        stage('Container Security Scanning') {
            steps {
                sh '''
                    mkdir -p $HOME/bin
                    curl -sfL https://raw.githubusercontent.com/aquasecurity/trivy/main/contrib/install.sh | sh -s -- -b $HOME/bin
                    $HOME/bin/trivy image --format json --output trivy-results.json ${ECR_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG} || true
                    $HOME/bin/trivy image --severity HIGH,CRITICAL ${ECR_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG} || true
                '''
            }
            post {
                always {
                    archiveArtifacts artifacts: 'trivy-results.json', allowEmptyArchive: true
                }
            }
        }
        
        stage('Container Registry Push') {
            steps {
                script {
                    withCredentials([aws(credentialsId: 'aws-credentials')]) {
                        sh """
                            aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${ECR_REGISTRY}
                            docker push ${ECR_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}
                            docker push ${ECR_REGISTRY}/${IMAGE_NAME}:latest
                        """
                    }
                }
            }
        }
        
        stage('Production Deployment') {
            steps {
                script {
                    withCredentials([aws(credentialsId: 'aws-credentials')]) {
                        sh """
                            aws autoscaling start-instance-refresh \\
                                --auto-scaling-group-name ${ASG_NAME} \\
                                --preferences MinHealthyPercentage=50 \\
                                --region ${AWS_REGION}
                        """
                    }
                }
            }
        }
        
        stage('Health Check') {
            steps {
                sh """
                    sleep 180
                    curl -f https://dev-api.iasolutions.co.uk/health || exit 1
                """
            }
        }
    }
    
    post {
        always {
            sh 'docker system prune -f || true'
        }
        success {
            echo "Build completed successfully"
        }
        failure {
            echo "Build failed - check logs and security scan results"
        }
    }
}